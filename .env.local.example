# Privy Configuration
# Get your App ID from https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Backend API URL
# Local development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000

# Production (uncomment and update when deploying)
# NEXT_PUBLIC_API_URL=https://your-backend-url.com
# NEXT_PUBLIC_BACKEND_URL=https://your-backend-url.com

# Smart Contract Addresses (Base Sepolia)
NEXT_PUBLIC_MOCKIDRX_CONTRACT_ADDRESS=0x_your_mockidrx_contract_address
NEXT_PUBLIC_CAR_CONTRACT_ADDRESS=0x_your_car_contract_address
NEXT_PUBLIC_FRAGMENT_CONTRACT_ADDRESS=0x_your_fragment_contract_address

# Backend Wallet Address (for approvals)
NEXT_PUBLIC_BACKEND_WALLET_ADDRESS=0x_your_backend_wallet_address
